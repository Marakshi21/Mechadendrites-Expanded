<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <!-- Standard Tier (2): An improvement over basic mechadendrites but still limited in some ways. Slightly above old refined but below old standard. Late-Industrial/Early-Spacer tier-->
    <ThingDef Name="Dusk_BodypartStandardMechadendriteBase" ParentName="BodyPartBase" Abstract="True">
        <techLevel>Industrial</techLevel>
        <thingCategories>
            <li>BodyPartsProsthetic</li>
        </thingCategories>
        <graphicData>
            <texPath>Things/Item/Health/HealthItem</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>0.8</drawSize>
            <color>(154,124,104)</color>
        </graphicData>
        <techHediffsTags>
            <li>Simple</li>
        </techHediffsTags>
        <statBases>
            <WorkToMake>12000</WorkToMake>
        </statBases>
        <recipeMaker>
            <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
            <workSkill>Crafting</workSkill>
            <unfinishedThingDef>UnfinishedHealthItemProsthetic</unfinishedThingDef>
            <skillRequirements>
                <Crafting>6</Crafting>
            </skillRequirements>
            <effectWorking>Smith</effectWorking>
            <soundWorking>Recipe_Smith</soundWorking>
            <displayPriority>600</displayPriority>
            <researchPrerequisite>Dusk_StandardMechadendritesResearch</researchPrerequisite>
            <recipeUsers>
                <li>TableMachining</li>
            </recipeUsers>
        </recipeMaker>
    </ThingDef>

    <!-- Standard General Mechadendrite -->
    <HediffDef ParentName="AddedBodyPartBase">
        <defName>Dusk_[TIER][SPECIALTY]Mechadendrite</defName>
        <label>[tier] [specialty] mechadendrite</label>
        <labelNoun>a [tier] [specialty] mechadendrite</labelNoun>
        <dsecription>[MECHADENDRITE_DESCRIPTION]</dsecription>
        <descriptionHyperlinks><ThingDef>Dusk_[TIER][SPECIALTY]Mechadendrite</ThingDef></descriptionHyperlinks>
        <spawnThingOnRemoved>Dusk_[TIER][SPECIALTY]Mechadendrite</spawnThingOnRemoved>
        <addedPartProps>
            <solid>true</solid>
        </addedPartProps>
        <stages>
            <li>
                <capMods>
                    <capacity>[CAPACITY]</capacity>
                    <offset>[OFFSET]</offset>
                </capMods>
                <statOffsets>
                    <[STATS]></[STATS]>
                </statOffsets>
            </li>
        </stages>
    </HediffDef>
    

    <ThingDef ParentName="BodyPart[TIER]MechadendriteBase">
        <defName>Dusk_[TIER][SPECIALTY]Mechadendrite</defName>
        <label>[tier] [specialty] mechadendrite</label>
        <dsecription>[MECHADENDRITE_DESCRIPTION]</dsecription>
        <descriptionHyperlinks><RecipeDef>Dusk_Install[TIER][SPECIALTY]Mechadendrite</RecipeDef></descriptionHyperlinks>
        <costList>
            <[RESOURCE]></[RESOURCE]>
        </costList>
        <recipeMaker>
            <researchPrerequisite>Dusk_[TIER][SUBPROJECT]Mechadendrites</researchPrerequisite>
        </recipeMaker>
        <statBases>
            <Mass>[MASS]</Mass>
        </statBases>
    </ThingDef>
    
    <RecipeDef ParentName="SurgeryInstallBodyPartArtificialBase">
        <defName>Dusk_Install[TIER][SPECIALTY]Mechadendrite</defName>
        <label>install [tier] [specialty] mechadendrite</label>
        <description>install a [tier] [specialty] mechadendrite</description>
        <descriptionHyperlinks>
            <ThingDef>Dusk_[TIER][SPECIALTY]Mechadendrite</ThingDef>
            <HediffDef>Dusk_[TIER][SPECIALTY]Mechadendrite</HediffDef>
        </descriptionHyperlinks>
        <jobString>Installing a [tier] [specialty] mechadendrite</jobString>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>Dusk_[TIER][SPECIALTY]Mechadendrite</li>
                    </thingDefs>
                </filter>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>Dusk_[TIER][SPECIALTY]Mechadendrite</li>
            </thingDefs>
        </fixedIngredientFilter>
        <appliedOnFixedBodyParts>
            <li>Dusk_Mechadendrites</li>
        </appliedOnFixedBodyParts>
        <addsHediff>Dusk_[TIER][SPECIALTY]Mechadendrite</addsHediff>
    </RecipeDef>

    <RecipeDef ParentName="SurgeryRemoveImplantBase">
        <defName>Dusk_Remove[TIER][SPECIALTY]Mechadendrite</defName>
        <label>remove [tier] [specialty] mechadendrite</label>
        <description>Remove a [tier] [specialty] mechadendrite.</description>
        <descriptionHyperlinks>
            <ThingDef>Dusk_[TIER][SPECIALTY]Mechadendrite</ThingDef>
            <HediffDef>Dusk_[TIER][SPECIALTY]Mechadendrite</HediffDef>
        </descriptionHyperlinks>
        <jobString>Removing [TIER] [SPECIALTY] mechadendrite.</jobString>
        <removesHediff>Dusk_[TIER][SPECIALTY]Mechadendrite</removesHediff>
    </RecipeDef>
</Defs>