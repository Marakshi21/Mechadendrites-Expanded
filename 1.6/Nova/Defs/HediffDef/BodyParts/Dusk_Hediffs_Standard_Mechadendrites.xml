<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <!-- Standard Tier (2): An improvement over basic mechadendrites but still limited in some ways. Slightly above old refined but below old standard. Late-Industrial/Early-Spacer tier-->
    <!-- Steel and Components are the name of the game here -->
    <ThingDef Name="Dusk_BodypartStandardMechadendriteBase" ParentName="BodyPartBase" Abstract="True">
        <techLevel>Industrial</techLevel>
        <thingCategories>
            <li>BodyPartsProsthetic</li>
        </thingCategories>
        <graphicData>
            <texPath>Things/Item/Health/HealthItem</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>0.8</drawSize>
            <color>(154,124,104)</color>
        </graphicData>
        <techHediffsTags>
            <li>Simple</li>
        </techHediffsTags>
        <statBases>
            <WorkToMake>12000</WorkToMake>
        </statBases>
        <recipeMaker>
            <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
            <workSkill>Crafting</workSkill>
            <unfinishedThingDef>UnfinishedHealthItemProsthetic</unfinishedThingDef>
            <skillRequirements>
                <Crafting>6</Crafting>
            </skillRequirements>
            <effectWorking>Smith</effectWorking>
            <soundWorking>Recipe_Smith</soundWorking>
            <displayPriority>600</displayPriority>
            <researchPrerequisite>Dusk_StandardMechadendritesResearch</researchPrerequisite>
            <recipeUsers>
                <li>TableMachining</li>
            </recipeUsers>
        </recipeMaker>
    </ThingDef>

    <!-- Standard General Mechadendrite -->
    <HediffDef ParentName="AddedBodyPartBase">
        <defName>Dusk_StandardGeneralMechadendrite</defName>
        <label>standard general mechadendrite</label>
        <labelNoun>a standard general mechadendrite</labelNoun>
        <dsecription>[MECHADENDRITE_DESCRIPTION]</dsecription>
        <descriptionHyperlinks><ThingDef>Dusk_StandardGeneralMechadendrite</ThingDef></descriptionHyperlinks>
        <spawnThingOnRemoved>Dusk_StandardGeneralMechadendrite</spawnThingOnRemoved>
        <addedPartProps>
            <solid>true</solid>
        </addedPartProps>
        <stages>
            <li>
                <capMods>
                    <capacity>Manipulation</capacity>
                    <offset>0.04</offset>
                </capMods>
            </li>
        </stages>
    </HediffDef>
    

    <ThingDef ParentName="BodyPartStandardMechadendriteBase">
        <defName>Dusk_StandardGeneralMechadendrite</defName>
        <label>standard general mechadendrite</label>
        <dsecription>[MECHADENDRITE_DESCRIPTION]</dsecription>
        <descriptionHyperlinks><RecipeDef>Dusk_InstallStandardGeneralMechadendrite</RecipeDef></descriptionHyperlinks>
        <costList>
            <Steel>20</Steel>
            <ComponentIndustrial>1</ComponentIndustrial>
        </costList>
        <recipeMaker>
            <researchPrerequisite>Dusk_StandardMechadendritesResearch</researchPrerequisite>
        </recipeMaker>
        <statBases>
            <Mass>3</Mass>
        </statBases>
    </ThingDef>
    
    <RecipeDef ParentName="SurgeryInstallBodyPartArtificialBase">
        <defName>Dusk_InstallStandardGeneralMechadendrite</defName>
        <label>install standard general mechadendrite</label>
        <description>install a standard general mechadendrite</description>
        <descriptionHyperlinks>
            <ThingDef>Dusk_StandardGeneralMechadendrite</ThingDef>
            <HediffDef>Dusk_StandardGeneralMechadendrite</HediffDef>
        </descriptionHyperlinks>
        <jobString>Installing a standard general mechadendrite</jobString>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>Dusk_StandardGeneralMechadendrite</li>
                    </thingDefs>
                </filter>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>Dusk_StandardGeneralMechadendrite</li>
            </thingDefs>
        </fixedIngredientFilter>
        <appliedOnFixedBodyParts>
            <li>Dusk_Mechadendrites</li>
        </appliedOnFixedBodyParts>
        <addsHediff>Dusk_StandardGeneralMechadendrite</addsHediff>
    </RecipeDef>

    <RecipeDef ParentName="SurgeryRemoveImplantBase">
        <defName>Dusk_RemoveStandardGeneralMechadendrite</defName>
        <label>remove standard general mechadendrite</label>
        <description>Remove a standard general mechadendrite.</description>
        <descriptionHyperlinks>
            <ThingDef>Dusk_StandardGeneralMechadendrite</ThingDef>
            <HediffDef>Dusk_StandardGeneralMechadendrite</HediffDef>
        </descriptionHyperlinks>
        <jobString>Removing standard general mechadendrite.</jobString>
        <removesHediff>Dusk_StandardGeneralMechadendrite</removesHediff>
    </RecipeDef>
</Defs>