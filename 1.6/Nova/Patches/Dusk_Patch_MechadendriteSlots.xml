<?xml version="1.0" encoding="utf-8"?>

<Patch>
    <!-- Add Mechadendrite Slots onto Humanoid Pawns -->
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/BodyDef[defName="Human"]/corePart/parts</xpath>
        <order>Append</order>
        <value>
            <li>
                <def>Dusk_Mechadendrites</def>
                <customLabel>mechadendrite one</customLabel>
                <coverage>0.0025</coverage>
                <depth>Inside</depth>
                <groups>
                    <li>Dusk_MechadendriteSlot</li>
                </groups>
            </li>
        </value>
