<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <!-- Research Tab -->
    <ResearchTabDef>
        <defName>Marak_MechadendritesExpanded</defName>
        <label>Mechadendrites Research</label>
        <generalTitle>Mechadendrites Research</generalTitle>
    </ResearchTabDef>

    <ResearchProjectDef Name="Marak_MechadendritesResearchBase" Abstract="True">
        <tab>Marak_MechadendritesExpanded</tab>
    </ResearchProjectDef>

    <!-- Basic Mechadendrites -->
    <ResearchProjectDef ParentName="Marak_MechadendritesResearchBase">
        <defName>Marak_BasicMechadendrites</defName>
        <label>Basic Mechadendrite Prototypes</label>
        <description>Create rudimentary prototypes for a new class of bionic implants known as Mechadendrites.</description>
        <techLevel>Industrial</techLevel>
        <baseCost>250</baseCost>
        <prerequisites>
            <li>Machining</li>
            <li>Prosthetics</li>
        </prerequisites>
        <researchViewX>.5</researchViewX>
        <researchViewY>2.1</researchViewY>
    </ResearchProjectDef>

    <!-- Standard Mechadendrites -->
    <ResearchProjectDef ParentName="Marak_MechadendritesResearchBase">
        <defName>Marak_RefinedMechadendrites</defName>
        <label>Standard Mechadendrite Machining</label>
        <description>Improvements into the machining techniques used in the creation of Mechadendrites has yielded improvements in many fields. Allows creation of standard-tier mechadendrites.</description>
        <techLevel>Industrial</techLevel>
        <baseCost>500</baseCost>
        <requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
        <prerequisites>
            <li>Marak_BasicMechadendrites</li>
        </prerequisites>
        <researchViewX>2</researchViewX>
        <researchViewY>2.1</researchViewY>
    </ResearchProjectDef>

    <!-- High Mechadendrites -->
    <ResearchProjectDef ParentName="Marak_MechadendritesResearchBase">
        <defName>Marak_StandardMechadendrites</defName>
        <label>High Mechadendrites</label>
        <description>Infusing steel and plasteel to reduce costs, combined with precision fabrication, has yielded further improvements into the versatility of Mechadendrites. Allows creation of High-Tier Mechadendrites.</description>
        <techLevel>Spacer</techLevel>
        <baseCost>750</baseCost>
        <requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
        <requiredResearchFacilities>
            <li>MultiAnalyzer</li>
        </requiredResearchFacilities>
        <prerequisites>
            <li>Marak_RefinedMechadendrites</li>
            <li>Bionics</li>
            <li>Fabrication</li>
        </prerequisites>
        <researchViewX>4</researchViewX>
        <researchViewY>2.1</researchViewY>
    </ResearchProjectDef>

    <!-- Striker, Excavator, Field -->
    <ResearchProjectDef ParentName="Marak_MechadendritesResearchBase">
        <defName>Marak_RefinedBladedMechadendrites</defName>
        <label>Standard Bladed Mechadendrites</label>
        <description>Integrate blades into standard-tier mechadendrite chassis to improve efficiency in specific types of workloads including plants and mining.</description>
        <techLevel>Industrial</techLevel>
        <baseCost>250</baseCost>
        <requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
        <prerequisites>
            <li>Marak_RefinedMechadendrites</li>
        </prerequisites>
        <researchViewX>3</researchViewX>
        <researchViewY>0.7</researchViewY>
    </ResearchProjectDef>

    <!-- Multitool, Sweeper, Flashlight -->
    <ResearchProjectDef ParentName="Marak_MechadendritesResearchBase">
        <defName>Marak_RefinedToolsMechadendrites</defName>
        <label>Standard Tooling Mechadendrites</label>
        <description>Integrate tools into the standard-tier mechadendrite chassis to boost efficiency when working with various types of jobs.</description>
        <techLevel>Industrial</techLevel>
        <baseCost>250</baseCost>
        <requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
        <prerequisites>
            <li>Marak_RefinedMechadendrites</li>
        </prerequisites>
        <researchViewX>3</researchViewX>
        <researchViewY>3.5</researchViewY>
    </ResearchProjectDef>

    <!-- High Tooling Research - Artisan, Vacuum, Builder, Drill -->
    <ResearchProjectDef ParentName="Marak_MechadendritesResearchBase">
        <defName>Marak_StandardToolingMechadendrites</defName>
        <label>High Tooling Mechadendrites</label>
        <description>Combine lessons from standard tooling mechadendrites and modern techniques to improve existing tooling mechadendrites and create newer ones to boost fields that were previously not covered.</description>
        <techLevel>Spacer</techLevel>
        <baseCost>375</baseCost>
        <requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
        <requiredResearchFacilities>
            <li>MultiAnalyzer</li>
        </requiredResearchFacilities>
        <prerequisites>
            <li>Marak_StandardMechadendrites</li>
            <li>Marak_RefinedToolsMechadendrites</li>
        </prerequisites>
        <researchViewX>5</researchViewX>
        <researchViewY>3.5</researchViewY>
    </ResearchProjectDef>
    
    <!-- High Bladed Mechadendrites: Butchers', Doctor, Agrarian -->
    <ResearchProjectDef ParentName="Marak_MechadendritesResearchBase">
        <defName>Marak_StandardBladedMechadendrites</defName>
        <label>High Bladed Mechadendrites</label>
        <description>Improve upon standard-tier bladed mechadendrites expanding on their ability to aid in jobs and cover more fields than before.</description>
        <techLevel>Spacer</techLevel>
        <baseCost>375</baseCost>
        <requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
        <requiredResearchFacilities>
            <li>MultiAnalyzer</li>
        </requiredResearchFacilities>
        <prerequisites>
            <li>Marak_StandardMechadendrites</li>
            <li>Marak_RefinedBladedMechadendrites</li>
        </prerequisites>
        <researchViewX>5</researchViewX>
        <researchViewY>0.7</researchViewY>
    </ResearchProjectDef>
</Defs>