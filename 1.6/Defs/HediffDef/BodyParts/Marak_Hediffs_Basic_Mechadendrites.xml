<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <ThingDef Name="BodyPartBasicMechadendriteBase" ParentName="BodyPartBase" Abstract="True">
        <techLevel>Industrial</techLevel>
        <thingCategories>
            <li>BodyPartsProsthetic</li>
        </thingCategories>
        <graphicData>
            <texPath>Things/Item/Health/HealthItem</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>0.80</drawSize>
            <color>(154,124,104)</color>
        </graphicData>
        <statBases>
            <WorkToMake>24000</WorkToMake>
        </statBases>
        <recipeMaker>
            <displayPriority>600</displayPriority>
        </recipeMaker>
    </ThingDef>

    <ThingDef Name="BodyPartMechadendriteMakeableBase" ParentName="BodyPartBasicMechadendriteBase" Abstract="True">
        <recipeMaker>
            <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
            <workSkill>Crafting</workSkill>
            <effectWorking>Smith</effectWorking>
            <soundWorking>Recipe_Smith</soundWorking>
            <recipeUsers>
                <li>TableMachining</li>
            </recipeUsers>
            <skillRequirements>
                <Crafting>6</Crafting>
            </skillRequirements>
            <unfinishedThingDef>UnfinishedHealthItemProsthetic</unfinishedThingDef>
            <researchPrerequisite>Marak_BasicMechadendrites</researchPrerequisite>
        </recipeMaker>
    </ThingDef>

    <RecipeDef Name="SurgeryInstallBodyPartBasicMechadendriteBase" ParentName="SurgeryInstallBodyPartArtificialBase" Abstract="True">
        <skillRequirements>
            <Medicine>6</Medicine>
        </skillRequirements>
    </RecipeDef>

   <!-- <HediffDef Name="AddedBodyPartMechadendrite" ParentName="AddedBodyPartBase" Abstract="True">
        <defaultLabelColor>(255, 102, 0)</defaultLabelColor>
    </HediffDef> -->
    
    <!-- Basic Mechadendrite -->
    
    <HediffDef ParentName="AddedBodyPartBase">
        <defName>Marak_BasicMechadendrite</defName>
        <label>basic mechadendrite</label>
        <labelNoun>a basic mechadendrite</labelNoun>
        <description>An installed basic mechadendrite. Its rigid tendril-like form limits movements while the wielder's control is limited thanks to being wired into the spine.</description>
        <descriptionHyperlinks><ThingDef>Marak_BasicMechadendrite</ThingDef></descriptionHyperlinks>
        <spawnThingOnRemoved>Marak_BasicMechadendrite</spawnThingOnRemoved>
        <addedPartProps>
            <solid>true</solid>
        </addedPartProps>
        <stages>
            <li>
                <capMods>
                    <li>
                        <capacity>Manipulation</capacity>
                        <offset>0.015</offset>
                    </li>
                </capMods>
            </li>
        </stages> 
    </HediffDef>

    <ThingDef ParentName="BodyPartMechadendriteMakeableBase">
        <defName>Marak_BasicMechadendrite</defName>
        <label>basic mechadendrite</label>
        <!-- <description>A rudimentary mechadendrite that is attached onto a person's torso and crudely wired into the muscles and spinal cord to allow for some semblance of control. While capable of basic movement, its rigid design makes it difficult to wield effectively limiting its usefulness.</description> -->
        <description>A basic mechadendrite made from crude methods. Its rigid tendril-like form limits its movements lending its use mostly in grabbing and holding onto items. The wielder has some control thanks to being wired into both their muscles and spinal cord, albeit limited.</description>
        <descriptionHyperlinks><RecipeDef>Marak_InstallBasicMechadendrite</RecipeDef></descriptionHyperlinks>
        <costList>
            <Steel>8</Steel>
            <ComponentIndustrial>1</ComponentIndustrial>
        </costList>
        <statBases>
            <Mass>2</Mass>
        </statBases>
        <techHediffsTags>
            <li>Simple</li>
        </techHediffsTags>
    </ThingDef>

    <RecipeDef ParentName="SurgeryInstallBodyPartBasicMechadendriteBase">
        <defName>Marak_InstallBasicMechadendrite</defName>
        <label>install basic mechadendrite</label>
        <description>Install a basic mechadendrite.</description>
        <descriptionHyperlinks>
            <ThingDef>Marak_BasicMechadendrite</ThingDef>
            <HediffDef>Marak_BasicMechadendrite</HediffDef>
        </descriptionHyperlinks>
        <jobString>Installing basic mechadendrite.</jobString>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>Marak_BasicMechadendrite</li>
                    </thingDefs>
                </filter>
                <count>1</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>Marak_BasicMechadendrite</li>
            </thingDefs>
        </fixedIngredientFilter>
        <appliedOnFixedBodyParts>
            <li>Mechadendrite_Slot</li>
        </appliedOnFixedBodyParts>
        <addsHediff>Marak_BasicMechadendrite</addsHediff>
        <researchPrerequisite>Marak_Mechadendrite_Gateway</researchPrerequisite>
    </RecipeDef>

    <RecipeDef ParentName="SurgeryRemoveImplantBase">
        <defName>Marak_RemoveBasicMechadendrite</defName>
        <label>remove basic mechadendrite</label>
        <description>Remove basic mechadendrite.</description>
        <descriptionHyperlinks>
            <ThingDef>Marak_BasicMechadendrite</ThingDef>
            <HediffDef>Marak_BasicMechadendrite</HediffDef>
        </descriptionHyperlinks>
        <jobString>Removing basic mechadendrite.</jobString>
        <removesHediff>Marak_BasicMechadendrite</removesHediff>
    </RecipeDef>
    
</Defs>