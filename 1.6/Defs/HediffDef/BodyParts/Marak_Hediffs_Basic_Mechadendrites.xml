<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <!-- Basic Tier: Entry into all other mechadendrites, quite useless, requires only steel to make -->
        <ThingDef Name="BodyPartBasicMechadendriteBase" ParentName="BodyPartMechadendriteBase" Abstract="True">
        <techLevel>Industrial</techLevel>
        <thingCategories>
            <li>BodyPartsProsthetic</li>
        </thingCategories>
        <graphicData>
            <color>(154,124,104)</color>
        </graphicData>
        <techHediffsTags>
            <li>Simple</li>
        </techHediffsTags>
        <statBases>
            <WorkToMake>7500</WorkToMake>
        </statBases>
        <recipeMaker>
            <unfinishedThingDef>UnfinishedHealthItemProsthetic</unfinishedThingDef>
            <skillRequirements>
                <Crafting>5</Crafting>
            </skillRequirements>
            <researchPrerequisite>Marak_BasicMechadendrites</researchPrerequisite>
            <recipeUsers>
                <li>TableMachining</li>
            </recipeUsers>
        </recipeMaker>
    </ThingDef>
    
    <!-- Basic Mechadendrite -->
    <HediffDef ParentName="AddedBodyPartBase">
        <defName>Marak_BasicMechadendrite</defName>
        <label>basic mechadendrite</label>
        <labelNoun>a basic mechadendrite</labelNoun>
        <description>An installed basic mechadendrite. Its rigid tendril-like form and primitive connection into the user's spine limits both movements and control.</description>
        <descriptionHyperlinks><ThingDef>Marak_BasicMechadendrite</ThingDef></descriptionHyperlinks>
        <spawnThingOnRemoved>Marak_BasicMechadendrite</spawnThingOnRemoved>
        <addedPartProps>
            <solid>true</solid>
        </addedPartProps>
        <stages>
            <li>
                <capMods>
                    <li>
                        <capacity>Manipulation</capacity>
                        <offset>0.015</offset>
                    </li>
                </capMods>
            </li>
        </stages> 
    </HediffDef>

    <ThingDef ParentName="BodyPartBasicMechadendriteBase">
        <defName>Marak_BasicMechadendrite</defName>
        <label>basic mechadendrite</label>
        <description>A basic mechadendrite made from crude methods. Its rigid tendril-like form limits its movements lending its use mostly in grabbing and holding onto items. The wielder has some control thanks to being wired into both their muscles and spinal cord, albeit limited.</description>
        <descriptionHyperlinks><RecipeDef>Marak_InstallBasicMechadendrite</RecipeDef></descriptionHyperlinks>
        <costList>
            <Steel>20</Steel>
        </costList>
        <statBases>
            <Mass>3</Mass>
        </statBases>
    </ThingDef>

    <RecipeDef ParentName="SurgeryInstallBodyPartMechadendriteBase">
        <defName>Marak_InstallBasicMechadendrite</defName>
        <label>install basic mechadendrite</label>
        <description>Install a basic mechadendrite.</description>
        <descriptionHyperlinks>
            <ThingDef>Marak_BasicMechadendrite</ThingDef>
            <HediffDef>Marak_BasicMechadendrite</HediffDef>
        </descriptionHyperlinks>
        <jobString>Installing basic mechadendrite.</jobString>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>Marak_BasicMechadendrite</li>
                    </thingDefs>
                </filter>
                <count>1</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>Marak_BasicMechadendrite</li>
            </thingDefs>
        </fixedIngredientFilter>
        <appliedOnFixedBodyParts>
            <li>Mechadendrite_Slot</li>
        </appliedOnFixedBodyParts>
        <addsHediff>Marak_BasicMechadendrite</addsHediff>
    </RecipeDef>

    <RecipeDef ParentName="SurgeryRemoveImplantBase">
        <defName>Marak_RemoveBasicMechadendrite</defName>
        <label>remove basic mechadendrite</label>
        <description>Remove basic mechadendrite.</description>
        <descriptionHyperlinks>
            <ThingDef>Marak_BasicMechadendrite</ThingDef>
            <HediffDef>Marak_BasicMechadendrite</HediffDef>
        </descriptionHyperlinks>
        <jobString>Removing basic mechadendrite.</jobString>
        <removesHediff>Marak_BasicMechadendrite</removesHediff>
    </RecipeDef>
</Defs>
