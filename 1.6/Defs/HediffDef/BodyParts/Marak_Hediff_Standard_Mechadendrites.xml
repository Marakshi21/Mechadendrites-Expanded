<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!-- Base for Standard Mechadendrites -->
    <ThingDef Name="BodyPartStandardMechadendriteBase" ParentName="BodyPartBase" Abstract="True">
        <techLevel>Spacer</techLevel>
        <thingCategories>
            <li>BodyPartsBionic</li>
        </thingCategories>
        <graphicData>
            <texPath>Things/Item/Health/HealthItem</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>0.80</drawSize>
            <color>(189,169,118)</color>
        </graphicData>
        <tradeTags>
            <li>Bionic</li>
        </tradeTags>
        <techHediffsTags>
            <li>Advanced</li>
        </techHediffsTags>
        <statBases>
            <WorkToMake>36000</WorkToMake>
        </statBases>
        <recipeMaker>
            <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
            <workSkill>Crafting</workSkill>
            <effectWorking>Smith</effectWorking>
            <soundWorking>Recipe_Smith</soundWorking>
            <unfinishedThingDef>UnfinishedHealthItemBionic</unfinishedThingDef>
            <skillRequirements>
                <Crafting>10</Crafting>
            </skillRequirements>
            <researchPrerequisite>Marak_StandardMechadendrites</researchPrerequisite>
            <recipeUsers>
                <li>FabricationBench</li>
            </recipeUsers>
            <displayPriority>300</displayPriority>
        </recipeMaker>
    </ThingDef>

    <RecipeDef Name="SurgeryInstallBodyPartStandardMechadendriteBase" ParentName="SurgeryInstallBodyPartArtificialBase" Abstract="True">
        <skillRequirements>
            <Medicine>10</Medicine>
        </skillRequirements>
    </RecipeDef>

    <!-- Standard Mechadendrite -->

    <HediffDef ParentName="AddedBodyPartBase">
        <defName>Marak_StandardMechadendrite</defName>
        <label>standard mechadendrite</label>
        <labelNoun>a standard mechadendrite</labelNoun>
        <description>An installed standard mechadendrite. Mini-servos combined with the biogel nerve-link grant the wielder excellent control and usability.</description>
        <descriptionHyperlinks><ThingDef>Marak_StandardMechadendrite</ThingDef></descriptionHyperlinks>
        <spawnThingOnRemoved>Marak_StandardMechadendrite</spawnThingOnRemoved>
        <addedPartProps>
            <solid>true</solid>
        </addedPartProps>
        <stages>
            <li>
                <capMods>
                    <li>
                        <capacity>Manipulation</capacity>
                        <offset>0.04</offset>
                    </li>
                </capMods>
            </li>
        </stages>
    </HediffDef>

    <ThingDef ParentName="BodyPartStandardMechadendriteBase">
        <defName>Marak_StandardMechadendrite</defName>
        <label>standard mechadendrite</label>
        <description>A standard mechadendrite fabricated using modern techniques. The addition of mini-servos gives it impeccable movement combining with a flexible shell grant exceptional flexibility. A biogel nerve-link wired into the wielder's spine allows for exquisite control and usability marking it as one of the greatest mechadendrites to date.</description>
        <descriptionHyperlinks><RecipeDef>Marak_InstallStandardMechadendrite</RecipeDef></descriptionHyperlinks>
        <costList>
            <Plasteel>10</Plasteel>
            <ComponentSpacer>1</ComponentSpacer>
            <Steel>5</Steel>
        </costList>
        <thingSetMakerTags><li>RewardStandardMidFreq</li></thingSetMakerTags>
        <statBases>
            <Mass>2.5</Mass>
        </statBases>
    </ThingDef>

    <RecipeDef ParentName="SurgeryInstallBodyPartStandardMechadendriteBase">
        <defName>Marak_InstallStandardMechadendrite</defName>
        <label>install standard mechadendrite</label>
        <description>Install a standard mechadendrite.</description>
        <descriptionHyperlinks>
            <ThingDef>Marak_StandardMechadendrite</ThingDef>
            <HediffDef>Marak_StandardMechadendrite</HediffDef>
        </descriptionHyperlinks>
        <jobString>Installing a standard mechadendrite.</jobString>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>Marak_StandardMechadendrite</li>
                    </thingDefs>
                </filter>
                <count>1</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>Marak_StandardMechadendrite</li>
            </thingDefs>
        </fixedIngredientFilter>
        <appliedOnFixedBodyParts>
            <li>Mechadendrite_Slot</li>
        </appliedOnFixedBodyParts>
        <addsHediff>Marak_StandardMechadendrite</addsHediff>
        <researchPrerequisite>Marak_Mechadendrite_Gateway</researchPrerequisite>
    </RecipeDef>

    <RecipeDef ParentName="SurgeryRemoveImplantBase">
        <defName>Marak_RemoveStandardMechadendrite</defName>
        <label>remove standard Mechadendrite</label>
        <description>Remove standard Mechadendrite.</description>
        <descriptionHyperlinks>
            <ThingDef>Marak_StandardMechadendrite</ThingDef>
            <HediffDef>Marak_StandardMechadendrite</HediffDef>
        </descriptionHyperlinks>
        <jobString>Removing standard mechadendrite.</jobString>
        <removesHediff>Marak_StandardMechadendrite</removesHediff>
    </RecipeDef>
    
    <!-- Optical Mechadendrite -->

    <HediffDef ParentName="AddedBodyPartBase">
        <defName>Marak_StandardOpticalMechadendrite</defName>
        <label>standard optical mechadendrite</label>
        <labelNoun>a standard optical mechadendrite</labelNoun>
        <description>An installed standard optical mechadendrite. Home to various visual sensors to aid in sight, it can see in spectrums normal fleshy eyes cannot while transmitting visual data to its wielder to improve sight.</description> 
        <!-- <description>Capable of acting as an additional eye and able to see in spectrums the human eye cannot normally see, it's able to provide visual data without overwhelming the user aiding sight.</description> -->
        <descriptionHyperlinks><ThingDef>Marak_StandardOpticalMechadendrite</ThingDef></descriptionHyperlinks>
        <spawnThingOnRemoved>Marak_StandardOpticalMechadendrite</spawnThingOnRemoved>
        <addedPartProps>
            <solid>true</solid>
        </addedPartProps>
        <stages>
            <li>
                <capMods>
                    <li>
                        <capacity>Sight</capacity>
                        <offset>0.04</offset>
                    </li>
                </capMods>
            </li>
        </stages>
    </HediffDef>

    <ThingDef ParentName="BodyPartStandardMechadendriteBase">
        <defName>Marak_StandardOpticalMechadendrite</defName>
        <label>standard optical mechadendrite</label>
        <!-- <description>A standard mechadendrite that acts as an additional pair of eyes for the user. Building upon the designs of the refined flashlight mechadendrite, the standard optical mechadendrite is able to transmit visual data back to the wielder's brain like it were another eye along with seeing various spectrums of light boosting its effectiveness.</description> -->
        <description>A standard optical mechadendrite hosts a suite of auxiliary sensors able to see in various spectrums of electromagnetic radiation. It's able to send visual information to its user without overloading the brain, but not much else.</description>
        <descriptionHyperlinks><RecipeDef>Marak_InstallStandardOpticalMechadendrite</RecipeDef></descriptionHyperlinks>
        <costList>
            <Plasteel>15</Plasteel>
            <ComponentSpacer>1</ComponentSpacer>
            <ComponentIndustrial>1</ComponentIndustrial>
            <Steel>10</Steel>
        </costList>
        <recipeMaker>
            <researchPrerequisite>Marak_StandardOpticalMechadendrites</researchPrerequisite>
        </recipeMaker>
        <thingSetMakerTags><li>RewardStandardMidFreq</li></thingSetMakerTags>
        <statBases>
            <Mass>3</Mass>
        </statBases>
    </ThingDef>

