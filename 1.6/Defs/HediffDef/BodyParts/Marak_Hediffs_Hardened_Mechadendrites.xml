        <label>install hardened optical mechadendrite</label>
        <description>Install a hardened optical mechadendrite.</description>
        <descriptionHyperlinks>
            <ThingDef>Marak_HardenedOpticalMechadendrite</ThingDef>
            <HediffDef>Marak_HardenedOpticalMechadendrite</HediffDef>
        </descriptionHyperlinks>
        <jobString>Installing a hardened optical mechadendrite.</jobString>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>Marak_HardenedOpticalMechadendrite</li>
                    </thingDefs>
                </filter>
                <count>1</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>Marak_HardenedOpticalMechadendrite</li>
            </thingDefs>
        </fixedIngredientFilter>
        <appliedOnFixedBodyParts>
            <li>Mechadendrite_Slot</li>
        </appliedOnFixedBodyParts>
        <addsHediff>Marak_HardenedOpticalMechadendrite</addsHediff>
    </RecipeDef>

