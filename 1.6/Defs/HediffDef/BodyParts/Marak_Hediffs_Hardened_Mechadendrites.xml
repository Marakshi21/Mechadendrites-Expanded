    <!-- SENSOR GROUP -->
    <!-- Optical Mechadendrite --> <!-- Further Improve sight at cost of mood or mental break threshold -->
    <!-- DESCRIPTION NEEDED -->
    <HediffDef ParentName="AddedBodyPartBase">
        <defName>Marak_HardenedOpticalMechadendrite</defName>
        <label>hardened optical mechadendrite</label>
        <labelNoun>a hardened optical mechadendrite</labelNoun>
        <description>An installed hardened optical mechadendrite. Home to various visual sensors to aid in sight, it can see in spectrums normal fleshy eyes cannot while transmitting visual data to its wielder to improve sight.</description>
        <descriptionHyperlinks><ThingDef>Marak_HardenedOpticalMechadendrite</ThingDef></descriptionHyperlinks>
        <spawnThingOnRemoved>Marak_HardenedOpticalMechadendrite</spawnThingOnRemoved>
        <addedPartProps>
            <solid>true</solid>
        </addedPartProps>
        <stages>
            <li>
                <statOffsets>
                    <MentalBreakThreshold>0.02</MentalBreakThreshold>
                </statOffsets>
                <capMods>
                    <li>
                        <capacity>Sight</capacity>
                        <offset>0.1</offset>
                    </li>
                </capMods>
            </li>
        </stages>
    </HediffDef>

    <ThingDef ParentName="BodyPartHardenedMechadendriteBase">
        <defName>Marak_HardenedOpticalMechadendrite</defName>
        <label>hardened optical mechadendrite</label>
        <description>A hardened optical mechadendrite hosts a suite of auxiliary sensors able to see in various spectrums of electromagnetic radiation. It's able to send visual information to its user without overloading the brain, but not much else.</description>
        <descriptionHyperlinks><RecipeDef>Marak_InstallHardenedOpticalMechadendrite</RecipeDef></descriptionHyperlinks>
        <costList>
            <Plasteel>8</Plasteel>
            <ComponentSpacer>2</ComponentSpacer>
            <Steel>6</Steel>
        </costList>
        <!-- <recipeMaker>
            <researchPrerequisite>Marak_HardenedOpticalMechadendrites</researchPrerequisite>
        </recipeMaker> -->
        <thingSetMakerTags><li>RewardStandardMidFreq</li></thingSetMakerTags>
        <statBases>
            <Mass>3</Mass>
        </statBases>
    </ThingDef>

    <RecipeDef ParentName="SurgeryInstallBodyPartMechadendriteBase">
        <defName>Marak_InstallHardenedOpticalMechadendrite</defName>
        <label>install hardened optical mechadendrite</label>
        <description>Install a hardened optical mechadendrite.</description>
        <descriptionHyperlinks>
            <ThingDef>Marak_HardenedOpticalMechadendrite</ThingDef>
            <HediffDef>Marak_HardenedOpticalMechadendrite</HediffDef>
        </descriptionHyperlinks>
        <jobString>Installing a hardened optical mechadendrite.</jobString>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>Marak_HardenedOpticalMechadendrite</li>
                    </thingDefs>
                </filter>
                <count>1</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>Marak_HardenedOpticalMechadendrite</li>
            </thingDefs>
        </fixedIngredientFilter>
        <appliedOnFixedBodyParts>
            <li>Mechadendrite_Slot</li>
        </appliedOnFixedBodyParts>
        <addsHediff>Marak_HardenedOpticalMechadendrite</addsHediff>
    </RecipeDef>

    <RecipeDef ParentName="SurgeryRemoveImplantBase">
        <defName>Marak_RemoveHardenedOpticalMechadendrite</defName>
