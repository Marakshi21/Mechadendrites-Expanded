<?xml version="1.0" encoding="utf-8" ?>
 <Patch>
    <!-- These add the mechadendrite slots onto humanoid pawns -->
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/BodyDef[defName="Human"]/corePart/parts</xpath>
        <order>Append</order>
        <value>
            <li>
                <def>Mechadendrite_Slot</def>
                <customLabel>mechadendrite one</customLabel>
                <coverage>0.005</coverage>
                <depth>Outside</depth>
                <groups>
                    <li>Marak_Mechadendrites</li>
                </groups>
            </li>
        </value>
    </Operation>

