<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <!-- WEAPONS GROUP -->
    <!-- Melee/Striker Mechadendrite -->
    <HediffDef ParentName="AddedBodyPartBase">
        <defName>Marak_RefinedCombatMechadendrite</defName>
        <label>standard striker mechadendrite</label>
        <labelNoun>a standard striker mechadendrite</labelNoun>
        <description>An installed standard striker mechadendrite. Its sharp blade allows it to strike through flesh with ease while armour can prove tricky.</description>
        <descriptionHyperlinks><ThingDef>Marak_RefinedCombatMechadendrite</ThingDef></descriptionHyperlinks>
        <spawnThingOnRemoved>Marak_RefinedCombatMechadendrite</spawnThingOnRemoved>
        <addedPartProps>
            <solid>true</solid>
        </addedPartProps>
        <comps>
            <li Class="HediffCompProperties_VerbGiver">
                <tools>
                    <li>
                        <label>blade</label>
                        <capacities>
                            <li>Stab</li>
                        </capacities>
                        <power>18</power>
                        <armorPenetration>0.2</armorPenetration>
                        <cooldownTime>2.5</cooldownTime>
                        <alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
                        <soundMeleeHit>MeleeHit_BionicPunch</soundMeleeHit>
                        <soundMeleeMiss>MeleeMiss_BionicPunch</soundMeleeMiss>
                    </li>
                </tools>
            </li>
        </comps>
    </HediffDef>

    <ThingDef ParentName="BodyPartRefinedMechadendriteBase">
        <defName>Marak_RefinedCombatMechadendrite</defName>
        <label>standard striker mechadendrite</label>
        <description>Designed with similar principles to its bladed brethren, the striker mechadendrite forsakes its worker-based heritage to focus on melee combat. Able to strike hard, but slow, it can punch deep through flesh while struggling with armoured foes.</description>
        <descriptionHyperlinks><RecipeDef>Marak_InstallRefinedCombatMechadendrite</RecipeDef></descriptionHyperlinks>
        <costList>
            <Steel>50</Steel>
            <ComponentIndustrial>2</ComponentIndustrial>
        </costList>
        <recipeMaker>
            <researchPrerequisite>Marak_RefinedBladedMechadendrites</researchPrerequisite>
        </recipeMaker>
        <statBases>
            <Mass>1.5</Mass>
        </statBases>
        <techHediffsTags>
            <li>AdvancedWeapon</li>
        </techHediffsTags>
        <violentTechHediff>true</violentTechHediff>
    </ThingDef>

    <RecipeDef ParentName="SurgeryInstallBodyPartMechadendriteBase">
        <defName>Marak_InstallRefinedCombatMechadendrite</defName>
        <label>install standard striker mechadendrite</label>
        <description>Install a standard striker mechadendrite.</description>
        <descriptionHyperlinks>
            <ThingDef>Marak_RefinedCombatMechadendrite</ThingDef>
            <HediffDef>Marak_RefinedCombatMechadendrite</HediffDef>
        </descriptionHyperlinks>
        <jobString>Installing standard striker mechadendrite.</jobString>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>Marak_RefinedCombatMechadendrite</li>
                    </thingDefs>
                </filter>
                <count>1</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>Marak_RefinedCombatMechadendrite</li>
            </thingDefs>
        </fixedIngredientFilter>
        <appliedOnFixedBodyParts>
            <li>Mechadendrite_Slot</li>
        </appliedOnFixedBodyParts>
        <addsHediff>Marak_RefinedCombatMechadendrite</addsHediff>
    </RecipeDef>

    <RecipeDef ParentName="SurgeryRemoveImplantBase">
        <defName>Marak_RemoveRefinedCombatMechadendrite</defName>
        <label>remove standard striker mechadendrite</label>
        <description>Remove a standard striker Mechadendrite.</description>
        <descriptionHyperlinks>
            <ThingDef>Marak_RefinedCombatMechadendrite</ThingDef>
            <HediffDef>Marak_RefinedCombatMechadendrite</HediffDef>
        </descriptionHyperlinks>
        <jobString>Removing standard striker mechadendrite.</jobString>
        <removesHediff>Marak_RefinedCombatMechadendrite</removesHediff>
    </RecipeDef>
</Defs>